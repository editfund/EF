{{if .CanSyncFork}}
	<div class="ui positive message tw-flex tw-items-center">
		<div class="tw-flex-1">
			{{ctx.Locale.TrN .ForkCommitsBehind "repo.sync_fork.branch_behind_one" "repo.sync_fork.branch_behind_few" .ForkCommitsBehind (printf "<a href='%s'>%s:%s</a>" (.BaseBranchLink | HTMLEscape) (.Repository.BaseRepo.FullName | HTMLEscape) (.BranchName | HTMLEscape) | SafeHTML)}}
		</div>
		<a role="button" class="ui compact positive button tw-m-0" href="{{.SyncForkLink}}">
			{{ctx.Locale.Tr "repo.sync_fork.button"}}
		</a>
	</div>
{{end}}
