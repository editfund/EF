{{template "base/head" .}}
<div role="main" aria-label="{{.Title}}" class="page-content repository new migrate">
	<div class="ui middle very relaxed page grid">
		<div>
			<h2 class="tw-mt-4">Migrate repository</h1>
			{{template "repo/migrate/helper" .}}
			<div class="migrate-entries">
				{{range .Services}}
					<a class="migrate-entry tw-flex tw-items-center" href="{{AppSubUrl}}/repo/migrate?service_type={{.}}&org={{$.Org}}&mirror={{$.Mirror}}">
						<div class="logo">
							{{if eq .Name "github"}}
								{{svg "octicon-mark-github" 184}}
							{{else if eq .Name "gitlab"}}
								{{svg "gitea-gitlab" 184}}
							{{else if eq .Name "gitbucket"}}
								{{svg "gitea-gitbucket" 184}}
							{{else}}
								{{svg (printf "gitea-%s" .Name) 184}}
								{{end}}
						</div>
						<div class="content">
							<div class="header tw-text-center">
								{{.Title}}
							</div>
							<div class="description tw-text-center">
								{{ctx.Locale.Tr (printf "repo.migrate.%s.description" .Name)}}
							</div>
						</div>
					</a>
				{{end}}
			</div>
		</div>
	</div>
</div>
{{template "base/footer" .}}
